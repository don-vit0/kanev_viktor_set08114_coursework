<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="uk.ac.napier.fitassistant.CalcFragment"
    android:background="@color/colorNavDark">

    <Button
        android:id="@+id/bmi_button"
        android:layout_width="140dp"
        android:layout_height="120dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="23dp"
        android:layout_marginStart="23dp"
        android:layout_marginTop="23dp"
        android:background="@drawable/button"
        android:text="@string/bmi_calculator_btn"
        android:textSize="20sp"
        android:textStyle="bold"
        android:typeface="monospace"
        />

    <Button
        android:id="@+id/calorie_button"
        android:layout_width="140dp"
        android:layout_height="120dp"
        android:layout_above="@+id/conv_button"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="19dp"
        android:layout_marginRight="19dp"
        android:background="@drawable/button"
        android:text="@string/calorie_calculator_btn"
        android:textSize="20sp"
        android:textStyle="bold"
        android:typeface="monospace"/>

    <Button
        android:id="@+id/conv_button"
        android:layout_width="280dp"
        android:layout_height="280dp"
        android:layout_below="@+id/bmi_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:background="@drawable/button"
        android:text="@string/macro_calc_btn"
        android:textSize="24sp"
        android:textStyle="bold"
        android:typeface="monospace"
        />

</RelativeLayout>
